CREATE TABLE PRODUCT_TYPE (
    ProductTypeNo CHAR(5) PRIMARY KEY,
    ProductTypeName VARCHAR(20)
);

CREATE TABLE PRODUCT (
    ProductNo CHAR(20) PRIMARY KEY,
    ProductName VARCHAR(100),
    ProductTypeNo CHAR(5),
    CostPrice DECIMAL(10,2),
    SalePrice DECIMAL(10,2),
    QTY INT DEFAULT 0,
    FOREIGN KEY (ProductTypeNo) REFERENCES PRODUCT_TYPE(ProductTypeNo)
);

CREATE TABLE SALE_H (
    SaleNo VARCHAR(10) PRIMARY KEY,
    SaleDate DATETIME,
    NetPrice DECIMAL(10,2),
    Status CHAR(2) DEFAULT '01',
    UserNo CHAR(10),
    FOREIGN KEY (Status) REFERENCES STATUS(Status)  -- ต้องมีตาราง STATUS ก่อน
);
